	public createDistanceChallenge(a: Admin) res: DistanceChallenge == 
		return new DistanceChallenge(a, "Testing Challenge", "Lets test Challenge class", mk_Types`Date(2017,12,24), mk_Types`Date(2017,12,30), 20);
	
