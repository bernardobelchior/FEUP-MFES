		dcl p: Types`Point := mk_Types`Point(10, 10);
		w.addPoint(p);
		w.endWorkout(u, 20);
		assert(true = c.verifyChallenge(w));
		c.addCompletedUser(u);
		assert(u in set elems c.getCompleted());
	);
	
	public test() == (
		testChallenge();
		testCompleteChallenge();
	)	
